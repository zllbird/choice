<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorContentBG"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_choice_tomorrow_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            >
    </android.support.v7.widget.RecyclerView>

    <TextView
            android:id="@+id/tv_selected_actions"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:transitionName="@string/share_tomorrow_count"
            android:theme="@style/ButtonLight"
            />

</android.support.constraint.ConstraintLayout>